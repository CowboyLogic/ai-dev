{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "docker-desktop-github": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "docker/desktop-mcp-toolbox-github:latest"],
      "enabled": true,
      "environment": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "timeout": 30000
    }
  },
  "tools": {
    "docker-desktop-github": true
  }
}